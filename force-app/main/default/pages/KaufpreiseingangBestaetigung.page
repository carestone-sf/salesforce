<apex:page standardController="Opportunity" showHeader="false" applyHtmlTag="false" renderAs="pdf">
    
    <head>
        <style>
            @page {

                size: A4;
                margin-top: 2cm;
                margin-bottom: 3.5cm;

                @bottom-center {
                    content: element(footer);
                }
            }

            body {
                font-family: 'sans-serif';
                color: #1f1f1f;
                font-size: 11pt;
            }

            h1, h2, h3, h4, h5, h6 {
                display: block;
            }
            div.header {                   
                width: 100%; 
                text-align: center; 
                margin-bottom: 1.25cm; 
                margin-top: 1.25cm;
            }          

            div.footer {
                position: running(footer);
                font-family: 'sans-serif';
                font-size: 7pt;
                text-align: center;
            }

            table {
                width: 100%;
            }

            .footer table tr td {
                vertical-align: bottom;
                font-family: 'sans-serif';
            }
        </style>
    </head>
    
