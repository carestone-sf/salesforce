            <targetReference>CheckBrokerageProtectionExists</targetReference>
        </connector>
        <inputAssignments>
            <field>E_Mail_bergeordneter_Makler__c</field>
            <value>
                <elementReference>$Record.Parent.Email__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Maklerbetreuer_Wirtschaftshaus_2__c</field>
            <value>
                <elementReference>$Record.Parent.Maklerbetreuer_Wirtschaftshaus_2__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>OwnerId</field>
            <value>
                <elementReference>$Record.Parent.OwnerId</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>188</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Check_ParentIdChanged</targetReference>
        </connector>
        <filterFormula>{!$Setup.AutomationController__c.AccountFlows__c}</filterFormula>
        <object>Account</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
