            <field>Maklerschutz_besteht__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Maklerschutz_bis__c</field>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <recordUpdates>
        <description>Updates field from parent account details.</description>
        <name>UpdateFieldsFromParentAccount</name>
        <label>Update Fields from Parent Account</label>
        <locationX>226</locationX>
        <locationY>551</locationY>
