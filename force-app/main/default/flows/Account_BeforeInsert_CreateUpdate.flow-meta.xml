        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>Set Maklerschutz bis field to 90 days from now.</description>
        <name>SetMaklerschutzToday90</name>
        <label>Set Maklerschutz Today + 90 Days</label>
        <locationX>50</locationX>
        <locationY>983</locationY>
        <connector>
            <targetReference>CheckBrokerWithContract</targetReference>
        </connector>
        <inputAssignments>
            <field>Maklerschutz_bis__c</field>
            <value>
                <elementReference>TodayPlus90Days</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <recordUpdates>
        <description>Sets Maklerschutz to true but date of protection to null</description>
        <name>SetPermanentBrokerProtection</name>
        <label>Set Permanent Broker Protection</label>
        <locationX>314</locationX>
        <locationY>983</locationY>
        <connector>
            <targetReference>CheckBrokerWithContract</targetReference>
        </connector>
        <inputAssignments>
            <field>Maklerschutz_besteht__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Maklerschutz_bis__c</field>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <recordUpdates>
        <description>Set permanent protection for this broker.</description>
        <name>SetPermanentProtection</name>
        <label>Set Permanent Protection</label>
